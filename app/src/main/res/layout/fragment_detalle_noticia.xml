<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.uniquindio.android.electiva.proyectomobiles.fragments.DetalleNoticiaFragment">

    <!--/**
     * Proyecto final Moviles Uniquindio
     *
     * @author Daniel Alvarado Arias
     * @author Leydi Giraldo Franco
     * @author Juan Diego Buitrago
     * 28 de Abril de 2016
     */
    -->

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titulo_detalle_noticia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="2dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_marginTop="7dp"
                android:text="MÃ¡quina de Ingenio Abril 22 de 2016"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textStyle="bold"
                android:textAlignment="center" />
            <ImageView
                android:id="@+id/imagen_noticia_detalle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/imagen_detalle_noticia"
                android:src="@drawable/imagennoticia"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />



            <TextView
                android:id="@+id/descripcion_de_detalle_noticia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"
                android:maxLines="50"
                android:text="@string/descripcion_detalle_noticia"
                android:textAlignment="center" />

           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               >

            <android.support.v7.widget.AppCompatImageButton
                android:id="@+id/fb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/fb"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="5dp" />

            <android.support.v7.widget.AppCompatImageButton
                android:id="@+id/twitter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/twitter"
                android:layout_toStartOf="@id/fb"
                android:layout_marginRight="15dp" />
           </RelativeLayout>


        </LinearLayout>

    </ScrollView>

</LinearLayout>
