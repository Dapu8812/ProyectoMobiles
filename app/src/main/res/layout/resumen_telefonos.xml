<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/numero_de_dependencia"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6px"
    android:orientation="vertical"
    android:padding="3px"
    card_view:cardBackgroundColor="@android:color/transparent"
    card_view:cardCornerRadius="4px"
    card_view:cardElevation="10px">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10px">


        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/confi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="20px"
            android:background="@android:drawable/ic_menu_add"
            android:backgroundTint="#000000"
            android:textColor="@color/colorPrimaryDark" />

        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/llamada"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="false"
            android:layout_marginLeft="20px"
            android:layout_toLeftOf="@id/confi"
            android:background="@android:drawable/ic_menu_call"
            android:backgroundTint="#000000"
            android:textColor="@color/colorPrimaryDark" />

        <TextView
            android:id="@+id/numeros_ext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="false"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20px"
            android:layout_toLeftOf="@id/llamada"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/numeros_usuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="false"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10px"
            android:layout_marginRight="70px"
            android:layout_toLeftOf="@id/numeros_ext"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/nombre_usuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/numeros_usuario"
            android:maxLines="3"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp"
            android:textStyle="bold"
            android:maxWidth="400px" />


    </RelativeLayout>

</android.support.v7.widget.CardView>